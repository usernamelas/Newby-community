<?xml version="1.0" encoding="utf-8"?>
<!-- Settings Menu Layout - Muncul saat user klik gear icon -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/overlay_settings_background"
    android:elevation="12dp">

    <!-- Settings Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/overlay_header_gradient"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btn_settings_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/overlay_header_button_bg"
            android:src="@drawable/ic_close"
            android:tint="@color/white"
            android:rotation="45"
            android:contentDescription="Back to Main"
            android:scaleType="centerInside" />

        <!-- Settings Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="8dp" />

        <!-- Spacer -->
        <View
            android:layout_width="32dp"
            android:layout_height="32dp" />

    </LinearLayout>

    <!-- Settings Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/overlay_content_background"
        android:padding="16dp">

        <!-- Hide Overlay & Icon -->
        <LinearLayout
            android:id="@+id/settings_hide_overlay"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/overlay_settings_item_bg"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_minimize"
                android:tint="@color/overlay_text_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Sembunyikan Overlay"
                android:textColor="@color/overlay_text_primary"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_menu"
                android:tint="@color/overlay_text_secondary"
                android:rotation="270" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/overlay_divider" />

        <!-- Theme Toggle -->
        <LinearLayout
            android:id="@+id/settings_theme_toggle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/overlay_settings_item_bg"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_theme"
                android:tint="@color/overlay_text_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Tema Gelap/Terang"
                android:textColor="@color/overlay_text_primary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_current_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gelap"
                android:textColor="@color/overlay_text_secondary"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/overlay_divider" />

        <!-- Position Reset -->
        <LinearLayout
            android:id="@+id/settings_reset_position"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/overlay_settings_item_bg"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_refresh"
                android:tint="@color/overlay_text_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Reset Posisi"
                android:textColor="@color/overlay_text_primary"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/overlay_divider" />

        <!-- Exit App -->
        <LinearLayout
            android:id="@+id/settings_exit_app"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/overlay_settings_item_bg"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_stop"
                android:tint="@color/overlay_exit_red" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Keluar Aplikasi"
                android:textColor="@color/overlay_exit_red"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>