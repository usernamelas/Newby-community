<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.PoolAssistant" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@color/color_on_error</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Custom Pool Assistant Attributes -->
        <item name="poolPrimaryColor">@color/color_primary</item>
        <item name="poolPrimaryVariantColor">@color/color_primary_variant</item>
        <item name="poolOnPrimaryColor">@color/color_on_primary</item>
        <item name="poolSecondaryColor">@color/color_secondary</item>
        <item name="poolSecondaryVariantColor">@color/color_secondary_variant</item>
        <item name="poolOnSecondaryColor">@color/color_on_secondary</item>
        
        <!-- Status Colors -->
        <item name="poolStatusActiveColor">@color/status_active</item>
        <item name="poolStatusInactiveColor">@color/status_inactive</item>
        <item name="poolStatusReadyColor">@color/status_ready</item>
        <item name="poolStatusScanningColor">@color/status_scanning</item>
        <item name="poolStatusCheckingColor">@color/status_checking</item>
        <item name="poolStatusErrorColor">@color/status_error</item>
        
        <!-- Trajectory Colors -->
        <item name="trajectoryGreenColor">@color/trajectory_green</item>
        <item name="trajectoryBlueColor">@color/trajectory_blue</item>
        <item name="trajectoryRedColor">@color/trajectory_red</item>
        <item name="trajectoryYellowColor">@color/trajectory_yellow</item>
        <item name="trajectoryPurpleColor">@color/trajectory_purple</item>
        <item name="trajectoryCyanColor">@color/trajectory_cyan</item>
        
        <!-- Overlay Theme Attributes (Light) -->
        <item name="overlayBackgroundColor">@color/overlay_content_background_light</item>
        <item name="overlaySurfaceColor">@color/overlay_surface_light</item>
        <item name="overlaySurfaceVariantColor">@color/overlay_surface_variant_light</item>
        <item name="overlayTextPrimaryColor">@color/overlay_text_primary_light</item>
        <item name="overlayTextSecondaryColor">@color/overlay_text_secondary_light</item>
        <item name="overlayTextDisabledColor">@color/black_alpha_38</item>
        <item name="overlayDividerColor">@color/overlay_divider_light</item>
        <item name="overlayRippleColor">@color/overlay_ripple_light</item>
        <item name="overlaySwitchTrackOn">@color/overlay_switch_track_on</item>
        <item name="overlaySwitchTrackOff">@color/overlay_switch_track_off_light</item>
        <item name="overlaySwitchThumbOn">@color/overlay_switch_thumb_on</item>
        <item name="overlaySwitchThumbOff">@color/overlay_switch_thumb_off</item>
        <item name="overlaySliderProgress">@color/overlay_slider_progress</item>
        <item name="overlaySliderProgressBg">@color/overlay_slider_progress_bg_light</item>
        <item name="overlaySliderThumb">@color/overlay_slider_thumb</item>
        <item name="overlayStatusActive">@color/overlay_status_active</item>
        <item name="overlayStatusInactive">@color/overlay_status_inactive</item>
        <item name="overlayStatusWarning">@color/overlay_status_warning</item>
        <item name="overlayStatusError">@color/overlay_status_error</item>
        <item name="overlayButtonBackground">@color/color_primary</item>
        <item name="overlayButtonTextColor">@color/white</item>
        <item name="overlayCloseButtonColor">@color/overlay_close_red</item>
        <item name="overlayHeaderBackground">@color/overlay_header_start</item>
        <item name="overlayHeaderTextColor">@color/white</item>
        <item name="overlayCardBackground">@color/card_background</item>
        <item name="overlayCardStroke">@color/card_stroke</item>
    </style>

    <!-- Light theme explicitly -->
    <style name="Theme.PoolAssistant.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@color/color_on_error</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Light Theme Overlay Attributes -->
        <item name="overlayBackgroundColor">@color/overlay_content_background_light</item>
        <item name="overlaySurfaceColor">@color/overlay_surface_light</item>
        <item name="overlaySurfaceVariantColor">@color/overlay_surface_variant_light</item>
        <item name="overlayTextPrimaryColor">@color/overlay_text_primary_light</item>
        <item name="overlayTextSecondaryColor">@color/overlay_text_secondary_light</item>
        <item name="overlayTextDisabledColor">@color/black_alpha_38</item>
        <item name="overlayDividerColor">@color/overlay_divider_light</item>
        <item name="overlayRippleColor">@color/overlay_ripple_light</item>
        <item name="overlaySwitchTrackOn">@color/overlay_switch_track_on</item>
        <item name="overlaySwitchTrackOff">@color/overlay_switch_track_off_light</item>
        <item name="overlaySliderProgressBg">@color/overlay_slider_progress_bg_light</item>
    </style>
    
    <!-- Overlay specific theme -->
    <style name="Theme.PoolAssistant.Overlay" parent="Theme.PoolAssistant">
        <!-- Overlay specific styling -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>