<!-- overlay_control_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#664CAF50" />
            <corners android:radius="24dp" />
            <stroke android:width="2dp" android:color="#4CAF50" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#334CAF50" />
            <corners android:radius="24dp" />
            <stroke android:width="1dp" android:color="#4CAF50" />
        </shape>
    </item>
</selector>