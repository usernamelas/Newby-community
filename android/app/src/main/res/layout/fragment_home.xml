<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium">

        <!-- Welcome Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_primary"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">

                <!-- Welcome Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@string/welcome_title"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_subtitle"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="@color/white_alpha_87" />

                <!-- App Icon -->
                <ImageView
                    android:layout_width="@dimen/icon_large"
                    android:layout_height="@dimen/icon_large"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:contentDescription="@string/app_icon_description"
                    android:src="@drawable/ic_pool_ball"
                    app:tint="@android:color/white" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Status Cards Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="@string/system_status"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold" />

        <!-- System Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_system_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:rippleColor="?attr/colorPrimary"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_large">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/iv_system_status_icon"
                    android:layout_width="@dimen/icon_medium"
                    android:layout_height="@dimen/icon_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:contentDescription="@string/system_status_icon"
                    android:src="@drawable/ic_system"
                    app:tint="?attr/colorPrimary" />

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/overlay_service"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_system_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_tiny"
                        android:text="@string/status_ready"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="Ready to start" />

                </LinearLayout>

                <!-- Status Indicator -->
                <View
                    android:id="@+id/indicator_system_status"
                    android:layout_width="@dimen/status_indicator_large"
                    android:layout_height="@dimen/status_indicator_large"
                    android:background="@drawable/status_indicator_background"
                    android:backgroundTint="@color/status_ready" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Game Detection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_game_detection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:rippleColor="?attr/colorPrimary"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_large">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/iv_detection_status_icon"
                    android:layout_width="@dimen/icon_medium"
                    android:layout_height="@dimen/icon_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:contentDescription="@string/game_detection_icon"
                    android:src="@drawable/ic_detection"
                    app:tint="?attr/colorSecondary" />

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/game_detection"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_detection_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_tiny"
                        android:text="@string/status_scanning"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="Scanning for games..." />

                </LinearLayout>

                <!-- Status Indicator -->
                <View
                    android:id="@+id/indicator_detection_status"
                    android:layout_width="@dimen/status_indicator_large"
                    android:layout_height="@dimen/status_indicator_large"
                    android:background="@drawable/status_indicator_background"
                    android:backgroundTint="@color/status_scanning" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Root Status Card (Pro version only) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_root_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:rippleColor="?attr/colorPrimary"
            app:strokeWidth="0dp"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_large">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/iv_root_status_icon"
                    android:layout_width="@dimen/icon_medium"
                    android:layout_height="@dimen/icon_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:contentDescription="@string/root_status_icon"
                    android:src="@drawable/ic_root"
                    app:tint="?attr/colorTertiary" />

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/root_access"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_root_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_tiny"
                        android:text="@string/status_checking"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="Checking access..." />

                </LinearLayout>

                <!-- Status Indicator -->
                <View
                    android:id="@+id/indicator_root_status"
                    android:layout_width="@dimen/status_indicator_large"
                    android:layout_height="@dimen/status_indicator_large"
                    android:background="@drawable/status_indicator_background"
                    android:backgroundTint="@color/status_checking" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Actions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="@string/quick_actions"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold" />

        <!-- Quick Actions Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <!-- Settings Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation_small"
                app:rippleColor="?attr/colorPrimary"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <ImageView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/settings"
                        android:src="@drawable/ic_settings"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Statistics Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_statistics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation_small"
                app:rippleColor="?attr/colorPrimary"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <ImageView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/statistics"
                        android:src="@drawable/ic_stats"
                        app:tint="?attr/colorSecondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/statistics"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- About Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_about"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation_small"
                app:rippleColor="?attr/colorPrimary"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <ImageView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/about"
                        android:src="@drawable/ic_info"
                        app:tint="?attr/colorTertiary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Help Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_help"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation_small"
                app:rippleColor="?attr/colorPrimary"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <ImageView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/help"
                        android:src="@drawable/ic_help"
                        app:tint="?attr/colorError" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/help"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <!-- Bottom Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_spacer_height" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>